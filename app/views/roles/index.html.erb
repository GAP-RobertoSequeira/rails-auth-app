<div class="page-header">
  <h1><%= @app.name %> App</h1>
</div>

<h2>Roles</h2>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th class="actions">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td><%= role.name %></td>
        <td class="actions">
          <%= link_to 'Show', [role.app, role], class: 'btn btn-primary' %>
          <%= link_to 'Edit', edit_app_role_path(role.app, role), class: 'btn btn-warning' %>
          <%= link_to 'Destroy', [role.app, role], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Role', new_app_role_path %> |
<%= link_to 'Back', app_path(@app) %>
